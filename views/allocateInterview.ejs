<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('_bootstrap_meta')%>
    <link rel="stylesheet" href="/css/interview.css">
    <title>Schedule Interview</title>
  </head>

  <body style="
  background: url('https://img.freepik.com/free-vector/paper-style-white-monochrome-background_23-2149003153.jpg?w=996&t=st=1713244837~exp=1713245437~hmac=91b0e43b3525be2d122de3e11653b0d3dc926f666df6a4a5f697dd28089b0584');
  background-repeat: no-repeat;
  background-size: cover;
  position: relative;
  font-family: monospace;
">
<!-- Display flash messages -->
<% if (success_msg && success_msg.length > 0) { %>
  <div class="alert alert-success"><%= success_msg %></div>
  <% } %>
  <% if (error_msg && error_msg.length > 0) { %>
    <div class="alert alert-danger"><%= locals.error_msg %></div>
    <% } %>
    
    <%- include('_header') %>
<div class="container">
  <form
  class="w-60 mx-auto mt-4" action="/company/schedule-interview" method="post" style="height: 60vh; display: grid; place-content: center; width: 530px; background: tra; border-radius: 5px; box-shadow: 7px 7px 12px rgba(0, 0, 0, 0.05);">
  <h3 style="margin-bottom: 50px; color: black;">Schedule Interview</h3>

  <div class="mb-3">
    <label for="name" class="form-label">Name</label>
    <select class="form-select" aria-label="Default select example" name="id" id="name">
    <option selected disabled>Select Student</option>

    <%for(let student of students){%>
    <option value="<%=student.id%>"><%= student.name %></option>
    <%}%>
  </select></select>
  </div>

  <div class="mb-3">
    <label for="company" class="form-label">Company</label>
    <input type="text" class="form-control" id="company" name="company"/>
  </div>

  <div class="mb-3">
    <label for="date" class="form-label">Date</label>
    <input type="date" class="form-control" id="date" name="date" />
  </div>

      <button class="btn btn-success align-self-center mt-3">
        Schedule Interview
      </button>
</form>
</div>
    
    <%- include('_bootstrap_script')%>
  </body>
</html>
